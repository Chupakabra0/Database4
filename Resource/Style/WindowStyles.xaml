<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Add-window section -->

    <!--==============================================================================-->

    <Style TargetType="Window" x:Key="AddWindow">
        <Setter Property="MinHeight" Value="400"></Setter>
        <Setter Property="MinWidth" Value="550"></Setter>
        <Setter Property="ResizeMode" Value="NoResize"></Setter>
        <Setter Property="Height" Value="{Binding RelativeSource={RelativeSource Self}, Path=MinHeight}"></Setter>
        <Setter Property="Width" Value="{Binding RelativeSource={RelativeSource Self}, Path=MinWidth}"></Setter>
    </Style>

    <!--==============================================================================-->


</ResourceDictionary>