        <TabControl Grid.Row="0">
            <!-- Authors panel !-->
            <TabItem Name="Authors" Header="{Binding RelativeSource={RelativeSource Self}, Path=Name}">
                <DataGrid AutoGenerateColumns="True">

                </DataGrid>
            </TabItem>
        
