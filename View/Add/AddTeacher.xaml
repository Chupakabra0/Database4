<Window x:Class="Database4.View.AddTeacher"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="Добавить преподавателя">

    <!-- Connect static resources/styles/etc -->
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Resource/Style/ControlStyles.xaml"></ResourceDictionary>
                <ResourceDictionary Source="pack://application:,,,/Resource/Style/WindowStyles.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Window.Style>
        <Style TargetType="Window" BasedOn="{StaticResource AddWindow}"></Style>
    </Window.Style>

    <!-- Main grid -->
    <Grid>
        <!-- Three rows -->
        <Grid.RowDefinitions>
            <!-- Header -->
            <RowDefinition Height="Auto"></RowDefinition>
            <!-- For main content -->
            <RowDefinition Height="*"></RowDefinition>
            <!-- For bottom buttons -->
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0, 30, 0, 0">
            <Label Grid.Row="0" HorizontalAlignment="Center" Content="Добавление преподавателя" Style="{StaticResource AddWindow Header}"></Label>
        </Grid>

        <!-- Main content -->
        <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">

            <!-- Two rows -->
            <Grid.RowDefinitions>
                <!-- TextBoxes' content -->
                <RowDefinition Height="*"></RowDefinition>
                <!-- CheckBoxes' section -->
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>

            <!-- TextBoxes' content -->
            <Grid Grid.Row="0" Margin="10">

                <!-- Two columns -->
                <Grid.ColumnDefinitions>
                    <!-- TextBlocks -->
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <!-- TextBoxes -->
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <!-- TextBlocks' stack panel -->
                <StackPanel Grid.Column="0" Margin="10,0" VerticalAlignment="Center">
                    <StackPanel.Resources>
                        <Style TargetType="TextBlock" BasedOn="{StaticResource AddWindow TextBox Title}"></Style>
                    </StackPanel.Resources>
                    <Grid>
                        <TextBlock Text="Идентификатор:"></TextBlock>
                    </Grid>
                    <Grid>
                        <TextBlock Text="Имя:"></TextBlock>
                    </Grid>
                    <Grid>
                        <TextBlock Text="Фамилия:"></TextBlock>
                    </Grid>
                    <Grid>
                        <TextBlock Text="Отчество:"></TextBlock>
                    </Grid>
                    <Grid>
                        <TextBlock Text="Город:"></TextBlock>
                    </Grid>
                    <Grid>
                        <TextBlock Text="Кафедра:"></TextBlock>
                    </Grid>
                </StackPanel>

                <!-- TextBoxes' stack panel -->
                <StackPanel Grid.Column="1" Margin="10,0" VerticalAlignment="Center">
                    <StackPanel.Resources>
                        <Style TargetType="TextBox" BasedOn="{StaticResource AddWindow TextBox}"></Style>
                        <Style TargetType="ComboBox" BasedOn="{StaticResource AddWindow ComboBox}"></Style>
                    </StackPanel.Resources>
                    <Grid>
                        <TextBox Name="ID" IsEnabled="False" Text="{Binding Path=Id, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                    </Grid>
                    <Grid>
                        <TextBox Name="Name" Text="{Binding Path=Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                    </Grid>
                    <Grid>
                        <TextBox Name="Surname" Text="{Binding Path=Surname, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                    </Grid>
                    <Grid>
                        <TextBox Name="Patronymic" Text="{Binding Path=Patronymic, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                    </Grid>
                    <Grid>
                        <ComboBox Name="City" ItemsSource="{Binding Path=Cities, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SelectedIndex="{Binding Path=SelectedCityIndex, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        </ComboBox>
                    </Grid>
                    <Grid>
                        <ComboBox Name="Cathedra" ItemsSource="{Binding Path=Cathedras, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SelectedIndex="{Binding Path=SelectedCathedraIndex, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        </ComboBox>
                    </Grid>
                </StackPanel>
            </Grid>

            <!-- CheckBoxes' section -->
            <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Orientation="Vertical">
                    <StackPanel.Resources>
                        <Style TargetType="CheckBox" BasedOn="{StaticResource AddWindow CheckBox}"></Style>
                    </StackPanel.Resources>
                    <CheckBox Padding="5, 0" Content="Активный" IsChecked="{Binding Path=IsActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></CheckBox>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Bottom buttons -->
        <Grid Grid.Row="2" Margin="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="Cancel" Style="{StaticResource AddWindow Cancel Button}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <i:CallMethodAction MethodName="Close" TargetObject="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}">
                            </i:CallMethodAction>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Button>
                <Button Name="Add" Style="{StaticResource AddWindow Add Button}" Command="{Binding Path=AddCommand}"></Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
